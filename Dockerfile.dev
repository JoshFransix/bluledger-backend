FROM node:20-alpine

WORKDIR /app

# Install OS deps (useful for native packages)
RUN apk add --no-cache libc6-compat

# Install dependencies first (better caching)
COPY package.json package-lock.json ./
RUN npm install

# Copy source code
COPY . .

# NestJS dev mode
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3001

EXPOSE 3001

# Hot reload
CMD ["npm", "run", "start:dev"]
